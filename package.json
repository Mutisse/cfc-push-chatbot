{
  "name": "cfc-push-chatbot",
  "version": "1.0.0",
  "description": "Chatbot WhatsApp para Igreja CFC PUSH",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "start:dev": "NODE_ENV=development npm run dev",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "clean": "rm -rf dist",
    "dev:debug": "ts-node-dev --respawn --transpile-only --inspect src/server.ts",
    "build": "npm install && tsc",
    "render-build": "npm install && npm run build"
  },
  "dependencies": {
    "@types/node": "^24.9.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.1",
    "twilio": "^5.10.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/mongodb": "^4.0.6",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.0"
  },
  "keywords": [
    "whatsapp",
    "chatbot",
    "nodejs",
    "typescript"
  ],
  "author": "CFC PUSH",
  "license": "MIT"
}
